{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 800,
  "title": {
    "text": "Использование мощностей на российских АЭС по данным Росэнергоатома",
    "fontSize": 24,
    "subtitle": ["©2021 Геннадий Лоскутов", ""],
    "anchor": "start"
  },
  "data": [
    {"name": "npp_store"},
    {
      "name": "index_store",
      "values": [
        {
          "unit": "concat_2_layer_1",
          "fields": [
            {"field": "yearmonthdate_ts_ms", "channel": "x", "type": "E"}
          ],
          "values": [0]
        }
      ]
    },
{
      "name": "npp_data",
      "url":"npp_data.json",
      "format": {"type": "json"}
    },
    {
      "name": "source_0",
      "url": "russia_ne50.geojson",
      "format": {"type": "json"}
    },
    {
      "name": "npp_info",
      "url":"npp_info.json",
      "format": {"type": "json"}
    },
    {
      "name": "data_0",
      "source": "npp_data",
      "transform": [
        {"type": "formula", "expr": "1000*datum.ts", "as": "ts_1"},
        {
          "field": "ts_1",
          "type": "timeunit",
          "units": ["year", "month", "date"],
          "as": ["ts_ms", "ts_ms_end"]
        }
      ]
    },
    {
      "name": "data_1",
      "source": "data_0",
      "transform": [
        {
          "type": "joinaggregate",
          "as": ["lower_box_kium", "upper_box_kium"],
          "ops": ["q1", "q3"],
          "fields": ["kium", "kium"],
          "groupby": ["u"]
        },
        {
          "type": "filter",
          "expr": "(datum[\"lower_box_kium\"] - 1.5 * (datum[\"upper_box_kium\"] - datum[\"lower_box_kium\"]) <= datum[\"kium\"]) && (datum[\"kium\"] <= datum[\"upper_box_kium\"] + 1.5 * (datum[\"upper_box_kium\"] - datum[\"lower_box_kium\"]))"
        },
        {
          "type": "aggregate",
          "groupby": ["u"],
          "ops": ["min", "max", "min", "max"],
          "fields": ["kium", "kium", "lower_box_kium", "upper_box_kium"],
          "as": [
            "lower_whisker_kium",
            "upper_whisker_kium",
            "lower_box_kium",
            "upper_box_kium"
          ]
        }
      ]
    },
    {
      "name": "data_2",
      "source": "data_0",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["u"],
          "ops": ["q1", "q3", "median", "min", "max"],
          "fields": ["kium", "kium", "kium", "kium", "kium"],
          "as": [
            "lower_box_kium",
            "upper_box_kium",
            "mid_box_kium",
            "min_kium",
            "max_kium"
          ]
        }
      ]
    },
    {
      "name": "data_3",
      "source": "data_0",
      "transform": [
        
        {"type": "filter", "expr": "datum.ts_ms >= lastMonth[0]"}
      ]
    },
    {
      "name": "data_4",
      "source": "data_3",
      "transform": [
        {
          "type": "window",
          "params": [1],
          "as": ["op_1"],
          "ops": ["lag"],
          "fields": ["op"],
          "sort": {"field": ["ts"], "order": ["ascending"]},
          "groupby": ["u"]
        },
        {"type": "filter", "expr": "datum.op !== datum.op_1"},
        {
          "type": "formula",
          "expr": "(isValid(datum.op_1) ? datum.op_1 : '') + '➔' + datum.op",
          "as": "unit_change"
        },
        {
          "field": "ts_ms",
          "type": "timeunit",
          "units": ["year", "month", "date"],
          "as": ["yearmonthdate_ts_ms", "yearmonthdate_ts_ms_end"]
        },
        {
          "type": "filter",
          "expr": "(isDate(datum[\"yearmonthdate_ts_ms\"]) || (isValid(datum[\"yearmonthdate_ts_ms\"]) && isFinite(+datum[\"yearmonthdate_ts_ms\"])))"
        }
      ]
    },
    {
      "name": "data_5",
      "source": "data_3",
      "transform": [
        {
          "field": "ts_ms",
          "type": "timeunit",
          "units": ["year", "month", "date"],
          "as": ["yearmonthdate_ts_ms", "yearmonthdate_ts_ms_end"]
        },
        {"type": "extent", "field": "ts_ms", "signal": "timeExtent"}
      ]
    },
    {
      "name": "data_6",
      "source": "data_5",
      "transform": [
        {
          "type": "filter",
          "expr": "!(length(data(\"index_store\"))) || (vlSelectionTest(\"index_store\", datum))"
        },
        {
          "type": "filter",
          "expr": "(isDate(datum[\"yearmonthdate_ts_ms\"]) || (isValid(datum[\"yearmonthdate_ts_ms\"]) && isFinite(+datum[\"yearmonthdate_ts_ms\"])))"
        }
      ]
    },
    {
      "name": "data_7",
      "source": "data_5",
      "transform": [
        {
          "type": "filter",
          "expr": "(isDate(datum[\"yearmonthdate_ts_ms\"]) || (isValid(datum[\"yearmonthdate_ts_ms\"]) && isFinite(+datum[\"yearmonthdate_ts_ms\"]))) && isValid(datum[\"mw\"]) && isFinite(+datum[\"mw\"])"
        }
      ]
    },
    {
      "name": "data_8",
      "source": "data_5",
      "transform": [
        {
          "type": "filter",
          "expr": "(isDate(datum[\"yearmonthdate_ts_ms\"]) || (isValid(datum[\"yearmonthdate_ts_ms\"]) && isFinite(+datum[\"yearmonthdate_ts_ms\"])))"
        }
      ]
    },
    {
      "name": "data_9",
      "source": "data_0",
      "transform": [
        {
          "field": "ts_ms",
          "type": "timeunit",
          "units": ["year", "month", "date"],
          "as": ["yearmonthdate_ts_ms", "yearmonthdate_ts_ms_end"]
        },
        {
          "type": "filter",
          "expr": "!(length(data(\"index_store\"))) || (vlSelectionTest(\"index_store\", datum))"
        },
        {
          "type": "lookup",
          "from": "npp_info",
          "key": "u",
          "fields": ["u"],
          "values": ["latitude", "longitude", "units"]
        },
        {
          "type": "formula",
          "expr": "datum.op + ' из ' + datum.units + ' блоков'",
          "as": "unit_info"
        }
      ]
    },
    {
      "name": "data_10",
      "source": "data_9",
      "transform": [
        {
          "type": "geopoint",
          "projection": "projection",
          "fields": ["longitude", "latitude"],
          "as": ["concat_3_layer_2_layer_0_x", "concat_3_layer_2_layer_0_y"]
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"kium\"]) && isFinite(+datum[\"kium\"])"
        }
      ]
    },
    {
      "name": "data_11",
      "source": "data_9",
      "transform": [
        {
          "type": "geopoint",
          "projection": "projection",
          "fields": ["longitude", "latitude"],
          "as": ["concat_3_layer_2_layer_1_x", "concat_3_layer_2_layer_1_y"]
        }
      ]
    },
    {"name": "source_1", "transform": [{"type": "graticule", "step": [10, 10]}]}
  ],
  "projections": [
    {
      "name": "projection",
      "translate": {"signal": "[width / 2, height / 2]"},
      "type": "mercator",
      "scale": 265,
      "center": [95, 78],
      "rotate": [-10, 0, 0]
    }
  ],
  "signals": [
    {
      "name": "lastMonth",
      "update": "[timeOffset('month',now(),-1),timeOffset('day',now(),0)]"
    },
    {"name": "concat_0_y_step", "value": 20},
    {
      "name": "concat_0_height",
      "update": "bandspace(domain('concat_0_y').length, 0, 0) * concat_0_y_step"
    },
    {"name": "concat_1_y_step", "value": 20},
    {
      "name": "concat_1_height",
      "update": "bandspace(domain('concat_1_y').length, 1, 0.5) * concat_1_y_step"
    },
    {"name": "concat_2_height", "value": 300},
    {"name": "concat_3_height", "value": 400},
    {
      "name": "unit",
      "value": {},
      "on": [
        {"events": "mousemove", "update": "isTuple(group()) ? group() : unit"}
      ]
    },
    {
      "name": "npp_u_legend",
      "value": null,
      "on": [
        {
          "events": [
            {"source": "view", "type": "click", "markname": "u_legend_symbols"},
            {"source": "view", "type": "click", "markname": "u_legend_labels"},
            {"source": "view", "type": "click", "markname": "u_legend_entries"}
          ],
          "update": "datum.value || item().items[0].items[0].datum.value",
          "force": true
        },
        {
          "events": [{"source": "view", "type": "click"}],
          "update": "!event.item || !datum ? null : npp_u_legend",
          "force": true
        }
      ]
    },
    {"name": "npp", "update": "vlSelectionResolve(\"npp_store\", \"union\")"},
    {
      "name": "index",
      "update": "vlSelectionResolve(\"index_store\", \"union\")"
    }
  ],
  "layout": {"padding": 20, "columns": 1, "bounds": "full", "align": "each"},
  "marks": [
    {
